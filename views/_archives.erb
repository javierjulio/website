<% unless @title.nil? %>
  <h2><%= @title %></h2>
<% end %>

<ul class="blog-archives">
  <% articles.each do |article| %>
    <li class="post-info">
      <h3 class="heading-2"><a href="<%= article.url %>"><%= article.title %></a></h3>
      <% if article.date %>
        <time class="post-date" datetime="<%= article.date.strftime("%Y-%m-%d") %>"><%= article.date.formatted %></time>
      <% end %>
    </li>
  <% end %>
</ul>
